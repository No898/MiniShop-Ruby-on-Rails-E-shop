<div class="w-full">
  <h1 class="text-3xl font-bold mb-6">Kategorie produktů</h1>

  <div class="space-y-4">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: "block bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300" do %>
        <div class="flex justify-between items-center">
          <div>
            <h2 class="text-2xl font-bold text-blue-700"><%= category.name %></h2>
            <p class="text-gray-600 mt-2"><%= category.description %></p>
          </div>
          <div class="text-right">
            <span class="text-2xl font-bold text-gray-800"><%= category.products_count %></span>
            <p class="text-gray-500">produktů</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
