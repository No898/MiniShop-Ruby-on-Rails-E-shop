<% content_for :title, "Showing product" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="mb-4">
    <h1 class="text-2xl font-bold">Detail produktu</h1>
  </div>

  <div class="bg-white p-4 rounded shadow">
    <p class="mb-2">
      <strong class="font-semibold">Název:</strong>
      <%= @product.name %>
    </p>

    <p class="mb-2">
      <strong class="font-semibold">Kategorie:</strong>
      <%= @product.category.name %>
    </p>

    <p class="mb-2">
      <strong class="font-semibold">Cena:</strong>
      <%= number_to_currency(@product.price, unit: "Kč", separator: ",", delimiter: " ", format: "%n %u") %>
    </p>

    <p>
      <strong class="font-semibold">Popis:</strong>
      <%= simple_format(@product.description) %>
    </p>
  </div>

  <div class="mt-4">
    <%= link_to 'Upravit', edit_admin_product_path(@product), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Zpět na seznam', admin_products_path, class: "ml-4 text-gray-600" %>
  </div>
</div>
