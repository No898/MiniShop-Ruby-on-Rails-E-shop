<%= form_with(model: [:admin, @category], class: "space-y-4") do |form| %>
  <% if @category.errors.any? %>
    <div style="color: red; margin-bottom: 1rem;">
      <h2 class="font-bold text-lg"><%= pluralize(@category.errors.count, "chyba", "chyby", "chyb") %> zabránilo uložení této kategorie:</h2>
      <ul class="list-disc list-inside">
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, 'Název', class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :description, 'Popis', class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.submit 'Uložit kategorii', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    <%= link_to 'Zpět na seznam', admin_categories_path, class: "ml-4 text-gray-600" %>
  </div>
<% end %> 