<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Dokončení objednávky</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="md:col-span-2">
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Doručovací adresa</h2>
        <%= form_with(model: @order, url: orders_path) do |f| %>
          <% if @order.errors.any? %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
              <strong class="font-bold">Vyskytly se chyby:</strong>
              <ul>
                <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-4">
            <%= f.label :address, "Adresa (ulice, č.p., město, PSČ)", class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= f.text_area :address, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          
          <div class="flex items-center justify-between">
            <%= f.submit "Odeslat objednávku", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="md:col-span-1">
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Souhrn košíku</h2>
        <ul>
          <% @order.order_items.each do |item| %>
            <li class="flex justify-between py-2 border-b">
              <span><%= item.product.name %> (x<%= item.quantity %>)</span>
              <span class="font-semibold"><%= number_to_currency(item.subtotal, unit: "Kč") %></span>
            </li>
          <% end %>
        </ul>
        <div class="flex justify-between font-bold text-xl mt-4 pt-4 border-t">
          <span>Celkem</span>
          <span><%= number_to_currency(@order.total_price, unit: "Kč") %></span>
        </div>
      </div>
    </div>
  </div>
</div>
